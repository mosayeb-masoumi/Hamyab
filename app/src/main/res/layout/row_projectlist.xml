<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="@drawable/bg_projectlist_item">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/row_project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="تان پروژه"
            android:textColor="@color/blue_dark"
            android:textSize="17sp" />

        <RelativeLayout
            android:id="@+id/rl12"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp">

            <Button
                android:id="@+id/row_btn_stop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_stop"
                android:text="توقف"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/row_btn_start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_start"
                android:text="شروع"
                android:textColor="@color/white" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_register"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:background="@drawable/shape_start"
            android:layout_toEndOf="@+id/rl12">

            <RelativeLayout
                android:id="@+id/rl_av_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/avi_login"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    app:indicatorName="BallPulseIndicator" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_submit_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_start"
                android:gravity="center"
                android:text="ثبت"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>