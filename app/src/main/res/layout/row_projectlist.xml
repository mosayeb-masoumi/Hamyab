<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_row"
    android:background="@drawable/bg_projectlist_item"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_project_title"
            android:text="تان پروژه"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:textColor="@color/blue_dark"
            android:textSize="17sp"
            />

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="توقف"
                android:background="@drawable/shape_stop"
                android:textColor="@color/white"
                android:id="@+id/row_btn_stop"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="شروع"
                android:background="@drawable/shape_start"
                android:textColor="@color/white"
                android:id="@+id/row_btn_start"/>



        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>